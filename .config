# 核心硬件平台（必须与 diy-part2.sh 中的 define Device/seewo_sv21 对应）
CONFIG_TARGET_rockchip=y
CONFIG_TARGET_rockchip_armv8=y
CONFIG_TARGET_rockchip_armv8_DEVICE_seewo_sv21=y

# 固件分区设置 (1024MB = 1GB，完美适配 4GB eMMC)
CONFIG_TARGET_ROOTFS_PARTSIZE=1024

# 网页后台与中文支持
CONFIG_PACKAGE_luci=y
CONFIG_LUCI_LANG_zh_Hans=y
CONFIG_PACKAGE_luci-nginx=y
CONFIG_PACKAGE_nginx-ssl=y
CONFIG_PACKAGE_luci-i18n-base-zh-cn=y
CONFIG_PACKAGE_luci-i18n-firewall-zh-cn=y

# 【性能关键】CPU 调频（解决跑分低，由于 DTS 已补全，这里只需勾选插件）
CONFIG_PACKAGE_luci-app-cpufreq=y
CONFIG_PACKAGE_luci-i18n-cpufreq-zh-cn=y

# 【核心功能】OpenClash 及其完整依赖
CONFIG_PACKAGE_luci-app-openclash=y
CONFIG_PACKAGE_bash=y
CONFIG_PACKAGE_curl=y
CONFIG_PACKAGE_unzip=y
CONFIG_PACKAGE_kmod-tun=y
CONFIG_PACKAGE_kmod-nft-tproxy=y

# 【硬件驱动】强制勾选（确保 USB 网卡、SATA 和 HDMI 正常工作）
CONFIG_PACKAGE_kmod-usb-net-rtl8152=y
CONFIG_PACKAGE_kmod-stmmac-dwmac=y
CONFIG_PACKAGE_kmod-ata-ahci-rockchip=y
CONFIG_PACKAGE_kmod-drm-rockchip=y
CONFIG_PACKAGE_kmod-usb3=y
CONFIG_PACKAGE_kmod-usb-ohci=y
CONFIG_PACKAGE_kmod-usb2=y

# 【进阶工具】
CONFIG_PACKAGE_luci-app-ttyd=y
CONFIG_PACKAGE_luci-app-wol=y
CONFIG_PACKAGE_luci-app-upnp=y
